<?xml version="1.0" ?>
<atlassian-plugin key="raimo" name="Hello World" plugins-version="2">
  <plugin-info>
    <description>Raimo</description>
    <version>1</version>
    <vendor name="Raimo" url="<%= base_url %>" />
    <permissions>
      <permission>create_oauth_link</permission>
      <permission>create_issues</permission>
      <permission>browse_projects</permission>
    </permissions>
  </plugin-info>

  <remote-plugin-container key="container" display-url="<%= base_url %>">
    <oauth>
      <public-key>
      <%= IO.read('public-key.pem') %>
      </public-key>
    </oauth>
  </remote-plugin-container>

  <!-- <general-page key="general" name="Greeting" url="/helloworld.html">
       </general-page>
  -->

  <webhook key="enabled" event="remote_plugin_enabled" url="/enabled"/>
</atlassian-plugin>
